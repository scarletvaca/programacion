//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ()
{
	float n,x,s,i,j,d,p;
	cout<<"ingrese n";
	cin>>n;
	cout<<"ingrese x";
	cin>>x;
	s=5;
	for(i=2;i<=n;i=i+2)
	{d=1;
	for(j=1;j<=i;j++)
		p=p*j;
	}
	j=s+pow (x,i)/p;

	cout<<"la sumatoria es"<<s;
	getch();
}
